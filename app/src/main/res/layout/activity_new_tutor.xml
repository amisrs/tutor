<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amisrs.gavin.tutorhelp.view.NewTutorActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newTutor"/>

    <EditText
        android:id="@+id/et_zid"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/zid"/>

    <EditText
        android:id="@+id/et_fname"
        android:layout_below="@id/et_zid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fname"/>

    <EditText
        android:id="@+id/et_lname"
        android:layout_below="@id/et_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lname"/>

    <Button
        android:id="@+id/btn_create"
        android:layout_below="@id/et_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"/>

</RelativeLayout>
